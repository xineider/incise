<div class="card-panel white">
    <br>
    <h4>Criar Post</h4>
    <form method="POST" action="" enctype="multipart/form-data">
        <div class="right-align">
            <a href="/post/" class="btn-floating btn-large waves-effect waves-light blue darken-1 left ajax-load">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
            </a>
            <button data-href="/post/cadastrar/" data-action="/sistema/post/" class="btn-floating btn-large waves-effect waves-light green darken-1 ajax-submit">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
            </button>
        </div>
        <div class="row">
        
            <div class="input-field col s12">
                <input required="true" class="validate" type="text" name="nome">
                <label for="nome">Titulo</label>
            </div>
            
            <!-- Create the editor container -->
      
            <div class="input-field col s12">
                  <div id="editor"></div>
<br>
                  <input type="checkbox" name="rascunho" value="1">
                  
            </div>                                                             
            <br>
            <br>
 
         
            <div class="right-align">
                <button data-href="/post/cadastrar/" data-action="/post/" class="btn waves-effect waves-light green darken-1 ajax-submit">
                    Salvar
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                </button>
        </div>
     </form>
    </div>