<div class="card-panel white">
  <h4>Post</h4>
  <a href="/post/cadastrar" class="btn-floating btn-large waves-effect waves-light blue darken-3 right ajax-load tooltipped"
    data-position="left" data-delay="50" data-tooltip="Adicionar post">
    <i class="fa fa-plus" aria-hidden="true"></i>
  </a>
  <table class="center-all">
    <thead>
      <tr>
        <th>
          Titulo
        </th>
        <th>
          Ação
        </th>
      </tr>
    </thead>
    <tbody>
      <%
                if (typeof data != 'undefined' && data.length > 0) {
                  for (var i = data.length - 1; i >= 0; i--) {
                %>
        <tr>
          <td>
            <%= data[i].titulo %>
          </td>
          <td>
            <a class="btn-floating btn waves-effect waves-light green ajax-load" href="/post/editar/<%= data[i].id %>">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
            <a class="btn-floating btn waves-effect waves-light red modal-remover-mount" data-href="#modaldeletar" data-id="<%= data[i].id %>"
              data-texto="Você tem certeza que quer deletar '<%= data[i].nome_fantasia %>'? " data-to="/sistema/post/desativar"
              data-back="/sistema/post">
              <i class="fa fa-minus" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
        <%
                  }
                } else {
                %>
          <tr>
            <td colspan="5" class="center-align">
              Não existem post cadastradas
            </td>
          </tr>
          <%
                  }
                %>
    </tbody>
  </table>
</div>